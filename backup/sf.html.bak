    <script>
        // マトリックス効果の実装
        document.addEventListener('DOMContentLoaded', () => {
            // マトリックスアニメーション開始
            const matrixTransition = document.querySelector('.matrix-transition');
            const matrixCanvas = document.getElementById('matrix-canvas');
            const ctx = matrixCanvas.getContext('2d');
            const matrixContent = document.querySelector('.matrix-content');

            // キャンバスサイズを設定
            matrixCanvas.width = window.innerWidth;
            matrixCanvas.height = window.innerHeight;

            // マトリックス効果を表示
            matrixTransition.classList.add('active');

            // マトリックス文字（アルファベットと数字、記号の組み合わせ）
            const latin = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
            const nums = '0123456789';
            const symbols = '!@#$%^&*()_+-=[]{}|;:,./<>?';
            const alphabet = latin + nums + symbols;
            
            const fontSize = 16;
            const columns = matrixCanvas.width / fontSize;
            
            // 各列の開始位置（y座標）を保持する配列
            const drops = [];
            for (let i = 0; i < columns; i++) {
                drops[i] = 1;
            }

            // マトリックス効果を描画する関数（青色蛍光色のデジタル雨）
            function drawMatrix() {
                // 透明な黒の背景で少しずつ前のフレームを消す（残像効果）
                ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
                ctx.fillRect(0, 0, matrixCanvas.width, matrixCanvas.height);
                
                // 文字の色を蛍光青に設定
                ctx.fillStyle = '#00ffff';
                ctx.font = `${fontSize}px monospace`;
                
                // 各列について文字を描画
                for (let i = 0; i < drops.length; i++) {
                    // ランダムな文字を選択
                    const text = alphabet.charAt(Math.floor(Math.random() * alphabet.length));
                    
                    // 文字を描画
                    ctx.fillText(text, i * fontSize, drops[i] * fontSize);
                    
                    // 一定の確率で先頭を消去し、新しい列を開始
                    if (drops[i] * fontSize > matrixCanvas.height && Math.random() > 0.975) {
                        drops[i] = 0;
                    }
                    
                    // 文字を下に移動
                    drops[i]++;
                }
            }

            // 最初にマトリックス効果を表示してから通常の遷移に移行
            let matrixInterval = setInterval(drawMatrix, 50);
            
            // コンテンツを表示 - 速く
            setTimeout(() => {
                matrixContent.style.opacity = '1';
            }, 200);
            
            // 一定時間後にマトリックス効果を消す - 時間短縮
            setTimeout(() => {
                clearInterval(matrixInterval);
                matrixTransition.style.opacity = '0';
                
                setTimeout(() => {
                    matrixTransition.style.visibility = 'hidden';
                }, 200);
            }, 1000);

            // ヘッダーのスクロール効果
            const header = document.querySelector('.main-header');
            const heroSection = document.querySelector('.category-hero');
            
            function handleScroll() {
                const heroHeight = heroSection.offsetHeight;
                const scrollPosition = window.scrollY;
                
                if (scrollPosition > heroHeight) {
                    header.classList.add('scrolled');
                } else {
                    header.classList.remove('scrolled');
                }
            }
            
            handleScroll();
            window.addEventListener('scroll', handleScroll);

            // Mobile menu toggle
            const menuToggle = document.querySelector('.menu-toggle');
            const mainNav = document.querySelector('.main-nav');
            
            menuToggle.addEventListener('click', () => {
                menuToggle.classList.toggle('active');
                mainNav.classList.toggle('active');
            });

            // スライドショー機能
            function initSlideshow() {
                const slides = document.querySelectorAll('.slideshow-slide');
                let currentSlide = 0;

                function showSlide(index) {
                    slides.forEach((slide, i) => {
                        slide.classList.toggle('active', i === index);
                    });
                }

                function nextSlide() {
                    currentSlide = (currentSlide + 1) % slides.length;
                    showSlide(currentSlide);
                }

                // 3秒ごとにスライドを切り替え
                setInterval(nextSlide, 3000);
            }

            // スライドショーを初期化
            initSlideshow();
            
            // Generate Particles for global container
            function createGlobalParticles() {
                const particlesContainer = document.querySelector('.global-particles-container');
                const particleCount = 150; // 粒子を増やす
                
                for (let i = 0; i < particleCount; i++) {
                    const particle = document.createElement('div');
                    particle.classList.add('particle');
                    
                    // Random size and position
                    const size = Math.random() * 4 + 1;
                    const posX = Math.random() * 100;
                    const posY = Math.random() * 100;
                    const delay = Math.random() * 20;
                    const duration = Math.random() * 10 + 10;
                    
                    particle.style.width = `${size}px`;
                    particle.style.height = `${size}px`;
                    particle.style.left = `${posX}%`;
                    particle.style.top = `${posY}%`;
                    particle.style.animationDelay = `${delay}s`;
                    particle.style.animationDuration = `${duration}s`;
                    
                    particlesContainer.appendChild(particle);
                }
            }
            
            // パーティクル生成を実行
            createGlobalParticles();
        });

        // ページ遷移時のマトリックス効果
        document.querySelectorAll('a[data-transition="true"]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const href = this.getAttribute('href');
                
                // マトリックス効果を再表示
                const matrixTransition = document.querySelector('.matrix-transition');
                const matrixCanvas = document.getElementById('matrix-canvas');
                const ctx = matrixCanvas.getContext('2d');
                const matrixContent = document.querySelector('.matrix-content');
                
                // 遷移先に応じてメッセージを変更
                if (href.includes('index.html')) {
                    matrixContent.textContent = 'RETURNING TO MAIN SYSTEM...';
                } else {
                    matrixContent.textContent = 'CONNECTING TO NEW DATABASE...';
                }
                
                // マトリックス効果を表示
                matrixTransition.classList.add('active');
                
                // マトリックス効果のアニメーション
                const latin = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
                const nums = '0123456789';
                const symbols = '!@#$%^&*()_+-=[]{}|;:,./<>?';
                const alphabet = latin + nums + symbols;
                
                const fontSize = 16;
                const columns = matrixCanvas.width / fontSize;
                
                const drops = [];
                for (let i = 0; i < columns; i++) {
                    drops[i] = 1;
                }
                
                function drawMatrix() {
                    ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
                    ctx.fillRect(0, 0, matrixCanvas.width, matrixCanvas.height);
                    
                    ctx.fillStyle = '#00ffff';
                    ctx.font = `${fontSize}px monospace`;
                    
                    for (let i = 0; i < drops.length; i++) {
                        const text = alphabet.charAt(Math.floor(Math.random() * alphabet.length));
                        ctx.fillText(text, i * fontSize, drops[i] * fontSize);
                        
                        if (drops[i] * fontSize > matrixCanvas.height && Math.random() > 0.975) {
                            drops[i] = 0;
                        }
                        
                        drops[i]++;
                    }
                }
                
                let matrixInterval = setInterval(drawMatrix, 50);
                
                setTimeout(() => {
                    matrixContent.style.opacity = '1';
                }, 150);
                
                setTimeout(() => {
                    window.location.href = href;
                }, 600);
            });
        });
    </script>
